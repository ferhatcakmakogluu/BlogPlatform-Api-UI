<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NLayer.Web</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NLayer.Web.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
</head>
<body>
    <aside>
        <div class="toggle">
            <div class="close" id="close-btn">
                <span class="material-icons-sharp">
                    close
                </span>
            </div>
        </div>

        <div class="sidebar">
            <a asp-action="Dashboard" asp-controller="Admin" class="@(ViewContext.RouteData.Values["controller"].ToString() =="Admin" && ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")">
                <span class="material-icons-sharp">
                    insights
                </span>
                <h3>Analizler</h3>
            </a>
            <a asp-action="NewsPortal" asp-controller="Admin" class="@(ViewContext.RouteData.Values["controller"].ToString() =="Admin" && ViewContext.RouteData.Values["action"].ToString() == "NewsPortal" ? "active" : "")">
                <span class="material-icons-sharp">
                    receipt_long
                </span>
                <h3>Haberler</h3>
            </a>
            <a asp-action="Albumes" asp-controller="Admin" class="@(ViewContext.RouteData.Values["controller"].ToString() =="Admin" && ViewContext.RouteData.Values["action"].ToString() == "Albumes" ? "active" : "")">
                <span class="material-icons-sharp">
                    dashboard
                </span>
                <h3>Albümler</h3>
            </a>
            <a asp-action="Admins" asp-controller="Admin" class="@(ViewContext.RouteData.Values["controller"].ToString() =="Admin" && ViewContext.RouteData.Values["action"].ToString() == "Admins" ? "active" : "")">
                <span class="material-icons-sharp">
                    person_outline
                </span>
                <h3>Adminler</h3>
            </a>
            
            
            <a asp-action="Comments" asp-controller="Admin" class="@(ViewContext.RouteData.Values["controller"].ToString() =="Admin" && ViewContext.RouteData.Values["action"].ToString() == "Comments" ? "active" : "")">
                <span class="material-icons-sharp">
                    mail_outline
                </span>
                <h3>Yorumlar</h3>
                <span class="message-count">27</span>
            </a>
            
            <a asp-action="BannedUsers" asp-controller="Admin" class="@(ViewContext.RouteData.Values["controller"].ToString() =="Admin" && ViewContext.RouteData.Values["action"].ToString() == "BannedUsers" ? "active" : "")">
                <span class="material-icons-sharp">
                    report_gmailerrorred
                </span>
                <h3>Engellenenler</h3>
            </a>
            <!--<a href="#">
                <span class="material-icons-sharp">
                    settings
                </span>
                <h3>Ayarlar</h3>
            </a>-->
            <a asp-action="Logout" asp-controller="Admin">
                <span class="material-icons-sharp">
                    logout
                </span>
                <h3>Çıkış</h3>
            </a>
        </div>
    </aside>
    <div class="container">
            @RenderBody()
    </div>
    <script src="~/js/index.js" asp-append-version="true"></script>
</body>
</html>
